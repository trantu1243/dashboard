<%- include('../components/header/table-header') %>

<div class="wrapper">
  
    <%- include('../components/sidebar/sidebar') %>

  <!-- Content Wrapper. Contains page content -->
  <div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>Flag</h1>
          </div>
         
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="card card-primary">
                        <div class="card-header">
                          <h3 class="card-title">Add</h3>
                        </div>
                       
                        <form action="/flag/add" method="POST">
                            
                            <div class="card-body">
                                <% if (error) { %>
                                    <div class="alert alert-danger"><%= error %></div>
                                <% } %>
                                <% if (success) { %>
                                    <div class="alert alert-success"><%= success %></div>
                                <% } %>  

                                <div class="form-group">
                                    <label for="flag">Flag</label>
                                    <input name="flag" type="text" class="form-control" id="flag" placeholder="Nhập flag" autocomplete="none" required>
                                </div>
                                <div class="form-group">
                                  <label for="round">Round</label>
                                  <input name="round" type="number" class="form-control" id="flag" placeholder="Nhập round" autocomplete="none" required>
                              </div>
                                <div class="form-group">
                                  <label>Đội</label>
                                  <select name="teamId" class="form-control" required>
                                      <option value="">--Lựa chọn đội--</option>
                                      <% if (teams && Array.isArray(teams)) { %>
                                        <% for(let i=0; i<teams.length; i++) {%>
                                          <option value="<%= teams[i]._id %>"><%= teams[i].name %></option>
                                        <% } %>
                                      <% } %>
                                  </select>
                                </div>
                            </div>
    
                            <div class="card-footer">
                                <button type="submit" class="btn btn-primary">Add</button>
                            </div>
                        </form>
                        <!-- /.card-body -->
                      </div>
                    <!-- /.card -->
                </div>
            </div>
        </div><!--/. container-fluid -->
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>
  <!-- /.content-wrapper -->
  <footer class="main-footer">
    <div class="float-right d-none d-sm-block">
    </div>
  </footer>

  <!-- Control Sidebar -->
  <aside class="control-sidebar control-sidebar-dark">
    <!-- Control sidebar content goes here -->
  </aside>
  <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->

<%- include('../components/footer/table-footer') %>
